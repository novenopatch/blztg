{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">

            </div>
            <div class="col-md-4">
                <h1>{{ product.name }}</h1>
                <h2>
                    {{ product.hisBrand }}
                </h2>
                <h3>
                    {% for cat in product.hisCategory %}
                        {{ cat.title }},
                    {% endfor %}
                </h3>
                <div class="text-primary" style="font-size: 4em;font-weight: bold;">{{ product.formattedPrice }}</div>
            </div>
        </div>

    </div>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
